package Домашка_про_массивы.lvl1;

//Подсчитать нечетные числа в массиве
public class Task1 {
    public static void main(String[] args) {

        int[] mas = {0, 5, 2, 4, 7, 1, 3, 19};
        int count = 0;
        for (int i = 0; i <= mas.length - 1; i++) {
            if (mas[i] % 2 != 0) {
                count++;
            }
        }
        System.out.println("В массиве " + count + " не четных чисел.");

    }
}
